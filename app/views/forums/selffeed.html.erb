
<div class="tab-content">
  <div class="tab-pane fade active in" id="newsFeed">


    

    <% @forums.each do |forum| %>
    <div class="container feed normal">
      <h1 class="articleTitle"><%= forum.title %></h1>
      <p class='datePosted'><span class='text-muted'>Date to be inserted</p>
      <h2 class='content text-info'><%= forum.content %></h2>
      

      <section class='feedback'>
        <div class='starRatings'>
          <span class='text-success'>Rating</span>
   
          <%= rating_for_user forum,current_user, "contents",imdb_avg:true,stars:5,half_show: true%>
        </div>
        <div class="form-group feedback">
          <label for="comment" class='comment'>Feedback:</label>
          <textarea class="form-control" rows="5" id="comment"></textarea>
          <button type="button" class="btn btn-default">Submit</button>
        </div>
        <%= link_to 'Show', show_feed_path(forum) %>
        <%= link_to 'Edit', edit_forum_path(forum) %>
        <%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %>
      </section>
    </div>
    <% end %>
    

