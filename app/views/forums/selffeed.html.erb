<%=current_user.id%>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @forums.each do |forum| %>
    <tr>
      <td><%= forum.title %></td>
      <td><%= forum.content %></td>
      <td><%= forum.tags %></td>
      <td><%= link_to 'Show', show_feed_path(forum) %></td>
      <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
      <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
