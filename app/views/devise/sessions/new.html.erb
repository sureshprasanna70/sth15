<div class="col-md-6">
<h2 class="whity">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true,:placeholder=>"Email",:class=>"input-md form-control"%>
  </div>
  <br>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off",:placeholder=>"Password",:class=>"input-md form-control" %>
  </div>
  <br>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
<%= f.check_box :remember_me %>      <label class="whity">Remember me</label> 
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in",:class=>"btn btn-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
