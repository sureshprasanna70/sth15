
<div class="col-md-6">

<h2 class="whity">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%if not resource.errors.empty?%>
    <div class="alert alert-danger">
      <%= devise_error_messages! %>
    </div>
    <%end%>
  <div class="field">
    <%= f.text_field :name,:class=>"form-control input-md",:placeholder=>"Your name" %><br>
  </div>
  <div class="field">
    <%= f.text_field :college,:class=>"form-control input-md" ,:placeholder=>"College" %><br>
  </div>
  <div class="field">
    <%= f.text_field :department ,:class=>"form-control input-md" ,:placeholder=>"Department" %><br>
  </div>
  <div class="field">
    <%= f.text_field :phone ,:class=>"form-control input-md" ,:placeholder=>"Phone" %><br>
  </div>

  <div class="field">
      <%= f.select :year,options_for_select(["1","2","3","4","5"]),{},:class=>"form-control input-md" ,:placeholder=>"Year" %><br>

  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true ,:class=>"form-control input-md" ,:placeholder=>"Your email id" %><br>

  </div>

  <div class="field">
    <% if @validatable %>
<%= f.password_field :password, autocomplete: "off" ,:class=>"form-control input-md" ,:placeholder=>"Password min "+@minimum_password_length.to_s+" char length" %><br>

    <% end %>
    
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off" ,:class=>"form-control input-md" ,:placeholder=>"Confirm passowrd" %><br>

  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up",:class=>"btn btn-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

</div>
