<br><br>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true,:placeholder=>"Your email linked with the account",:class=>"input-md form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Resend confirmation instructions",:class=>"btn btn-large btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
